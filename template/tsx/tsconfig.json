{
  "compilerOptions": {
    "lib": ["dom"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "hyperdom.jsx",
    "forceConsistentCasingInFileNames": true,
    "target": "ES6",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
